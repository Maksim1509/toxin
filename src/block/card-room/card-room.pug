mixin card-room(info)
    .card-room
        .card-room__photos
            .card-room__photo
                img(src=info.img1, alt="photo").card-room__img
            .card-room__photo
                img(src=info.img2, alt="photo").card-room__img
            .card-room__photo
                img(src=info.img3, alt="photo").card-room__img
            .card-room__photo
                img(src=info.img4, alt="photo").card-room__img
        .card-room__info
            span.card-room__number= info.number
            span.card-room__type= info.type
            span.card-room__price
                strong.card-room__price-item= info.price
                |  в сутки
        .card-room__line
        .card-room__rate-btn
            +rate(info.rating)
            .card-room__feedback
                srtong.card-room__feedback-count= info.fb
                |  отзывов