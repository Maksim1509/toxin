include ../block/checkbox-button/checkbox-button
include ../block/toggle/toggle
include ../block/rate-btn/rate-btn
include ../block/button/button
include ../block/link-icon/link-icon
include ../block/pagination/pagination
include ../block/rooms-filter/rooms-filter
include ../block/range-slider/range-slider
include ../block/checkbox-list/checkbox-list
include ../block/input-chbox/input-chbox
include ../block/title/title
include ../block/rich-chbox/rich-chbox

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title TOXIN
    body
        main
            .left
                include ../block/form/form
                include ../block/form-date/form-date
                include ../block/form-date-dropdown/form-date-dropdown
                include ../block/form-date-dropdown/form-date-dropdown
                include ../block/form-filter-dropdown/form-filter-dropdown
                include ../block/form-subscrip/form-subscrip
                +rooms-filter
                +checkbox-list('expandable checkbox list', 'Завтрак',
                 "Письменный стол", "Кроватка", "Телевизор", "Шампунь")
            .center
                div
                    +checkbox-button('checkbox-buttons','Можно курить',
                    'Можно с питомцами',
                    'Можно пригласить гостей (до 10 человек)')
                div
                    include ../block/radio-btn/radio-btn
                div
                    +toggle
                div
                    include ../block/like-btn/like-btn
                div
                    +rate-btn
                div
                    include ../block/dropdown/dropdown
                div
                    +input-chbox('TEST')
                div
                    +title('test')
                div
                    +rich-chbox('rich Checkbox Buttons', {main: 'Широкий коридор', discription: 'Ширина коридоров в номере не менее 91 см.'},
                    {main: 'Помощник для инвалидов', discription: 'На 1 этаже вас встретит специалист  и проводит до номера.'})
            .right
                div
                    +range-slider
                div Buttons
                    div
                        +button('click me')(class="button")
                        +button('click me')(class="button button--empty")
                    div
                        +link-icon('click me').link-icon
                        +link-icon('click me').link-icon.link-icon--grey
                    div
                        +button('перейти к оплате', 1).button.button--forward
                    div
                        +pagination
        script(src="../js/index.js")
               